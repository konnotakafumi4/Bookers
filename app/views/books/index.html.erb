<h1>Books</h1>

<% @books.each do |book| %>

  <teble>
  
    <th>Title</th>
    <%= book.title %>
    
    <th>Body</th>
    <%= book.body %>
    
    <th colspan="3"></th>
  
  </teble>

<% end %>

<h2>New books</h2>
<%= form_with model: Book.new do |f| %>

  <label for="books_title">Title</label>
  <%= f.text_field :title %>

  <label for="book_bady">Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>



